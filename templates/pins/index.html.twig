{% extends 'base.html.twig' %}


{% block body %}
{{ include('nav/navbar.html.twig') }}
{{ include('pins/_title_pins_app') }}
<p>Un pinterest-like</p>
<h1>{{ pluralize(pins|length, 'Pin') }}</h1>

{% for pin in pins %}

<article>
	
	<h2><a href="{{ path('app_pins_show', {id: pin.id}) }}">{{ pin.title }}</a></h2>
	<p>{{ pin.description|u.truncate(13, '...', false) }}</p>
	<p>{{ pin.createdAt|ago }}</p>

</article>

{% endfor %}

{% endblock %}

